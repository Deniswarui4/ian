---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <main>
    <section class="py-12 bg-gray-50">
      <div class="container mx-auto px-4">
        <h1 class="text-3xl md:text-4xl font-bold text-center text-gray-900 mb-12">Student Documents</h1>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Student ID Front -->
          <div class="bg-white rounded-lg shadow-lg p-6">
            <h2 class="text-2xl font-semibold text-gray-900 mb-4">Student ID (Front)</h2>
            <div class="flex justify-center">
              <img 
                src="/other documents/id-front.jpeg" 
                alt="Student ID Front" 
                class="max-w-full h-auto rounded-lg border border-gray-200"
              />
            </div>
          </div>
          
          <!-- Student ID Back -->
          <div class="bg-white rounded-lg shadow-lg p-6">
            <h2 class="text-2xl font-semibold text-gray-900 mb-4">Student ID (Back)</h2>
            <div class="flex justify-center">
              <img 
                src="/other documents/id-back.jpeg" 
                alt="Student ID Back" 
                class="max-w-full h-auto rounded-lg border border-gray-200"
              />
            </div>
          </div>
        </div>
        
        <!-- Admission Letter PDF -->
        <div class="mt-12 bg-white rounded-lg shadow-lg p-6">
          <h2 class="text-2xl font-semibold text-gray-900 mb-4">Admission Letter</h2>
          <div class="flex flex-col items-center">
            <a 
              href="/other documents/Admission_Letter_08221101309 (1)-2.pdf" 
              target="_blank"
              class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-6 rounded-lg transition-colors mb-4"
            >
              Download Admission Letter
            </a>
            
            <!-- Embed the PDF in the page -->
            <div class="w-full mt-4">
              <h3 class="text-lg font-medium text-gray-700 mb-2">View Admission Letter:</h3>
              <div class="border border-gray-200 rounded-lg overflow-hidden">
                <iframe
                  src="/other documents/Admission_Letter_08221101309 (1)-2.pdf"
                  width="100%"
                  height="600px"
                  class="rounded-lg"
                  type="application/pdf"
                  title="Admission Letter PDF"
                >
                  <p>Your browser does not support PDF viewing. 
                    <a href="/other documents/Admission_Letter_08221101309 (1)-2.pdf" class="text-blue-600 hover:underline">Download the PDF</a> instead.
                  </p>
                </iframe>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>