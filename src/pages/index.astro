---
import Layout from '../layouts/Layout.astro';
import PortfolioGallery from '../components/PortfolioGallery.astro';
---

<Layout>
  <main>
    <!-- Hero Section -->
    <section class="min-h-[50vh] flex items-center justify-center bg-gray-50">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">Name: Ian Mureithi Muturi</h1>
        <p class="text-xl text-gray-700 mb-1">Admission: ART6/0100/25</p>
        <p class="text-xl text-gray-700">Class: ART6 2509</p>
      </div>
    </section>

    <!-- Portfolio Gallery -->
    <PortfolioGallery />

    <!-- Call to Action -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-6">Explore Our Portfolio</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto mb-6">Browse through our collection of architectural designs and student documents</p>
        <a href="/documents" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-8 rounded-lg transition-colors">
          View Documents
        </a>
      </div>
    </section>
  </main>
</Layout>
